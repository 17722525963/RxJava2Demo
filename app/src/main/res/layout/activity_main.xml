<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="debounce、throttleWithTimeout、filter、switchMap+databinding实时搜索案例" />

            <Button
                android:id="@+id/throttle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="throttle+databinding防止按钮重复点击" />

            <Button
                android:id="@+id/rxlifecycle_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rxlifecycle在Fragment中使用测试" />

            <Button
                android:id="@+id/rx_merge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="merge合并数据" />

            <Button
                android:id="@+id/rx_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="interval、take、map验证码倒计时" />

            <Button
                android:id="@+id/rx_getappinfo"
                android:text="学习一、获取手机已安装APP信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
